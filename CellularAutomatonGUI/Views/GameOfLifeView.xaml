<UserControl
    x:Class="CellularAutomatonGUI.Views.GameOfLifeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cag="clr-namespace:CellularAutomatonGUI"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CellularAutomatonGUI.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Game of Life Configuration GroupBox  -->
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Header="Configuration">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="130" />
                </Grid.ColumnDefinitions>

                <!--  Game of Life Configuration GroupBox Row 0  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Columns:" />
                <xctk:IntegerUpDown
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding ColumnCount}"
                    DisplayDefaultValueOnEmptyText="True"
                    IsEnabled="{Binding IsStopped}"
                    Maximum="1000"
                    Minimum="1"
                    Value="{Binding ColumnCount}" />

                <!--  Game of Life Configuration GroupBox Row 1  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Rows:" />
                <xctk:IntegerUpDown
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding RowCount}"
                    DisplayDefaultValueOnEmptyText="True"
                    IsEnabled="{Binding IsStopped}"
                    Maximum="1000"
                    Minimum="1"
                    Value="{Binding RowCount}" />

                <!--  Game of Life Configuration GroupBox Row 2  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Neighborhood:" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding IsStopped}"
                    ItemsSource="{Binding CellsNeighborhoods}"
                    SelectedItem="{Binding SelectedCellsNeighborhood, Mode=TwoWay}">
                    <ComboBox.Resources>
                        <cag:EnumDescriptionConverter x:Key="enumDescriptionConverter" />
                    </ComboBox.Resources>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumDescriptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Game of Life Configuration GroupBox Row 3  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Birth:" />
                <ComboBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding BirthRules}"
                    SelectedItem="{Binding SelectedBirthRule, Mode=OneWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Chosen}" />
                                <TextBlock
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Text}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Game of Life Configuration GroupBox Row 4  -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Survival:" />
                <ComboBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding SurvivalRules}"
                    SelectedItem="{Binding SelectedSurvivalRule, Mode=OneWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Chosen}" />
                                <TextBlock
                                    Margin="3,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Text}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Game of Life Configuration GroupBox Row 5  -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="BC:" />
                <ComboBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding IsStopped}"
                    ItemsSource="{Binding BoundaryConditions}"
                    SelectedItem="{Binding SelectedBoundaryCondition, Mode=TwoWay}">
                    <ComboBox.Resources>
                        <cag:EnumDescriptionConverter x:Key="enumDescriptionConverter" />
                    </ComboBox.Resources>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumDescriptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Game of Life Configuration GroupBox Row 6  -->
                <Separator
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    VerticalAlignment="Center" />

                <!--  Game of Life Configuration GroupBox Row 7  -->
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Time interval [ms]:" />
                <xctk:IntegerUpDown
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding TimeInterval}"
                    DisplayDefaultValueOnEmptyText="True"
                    Maximum="5000"
                    Minimum="10"
                    Value="{Binding TimeInterval}" />

                <!--  Game of Life Configuration GroupBox Row 8  -->
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Cell width [px]:" />
                <xctk:IntegerUpDown
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding CellWidth}"
                    DisplayDefaultValueOnEmptyText="True"
                    Maximum="100"
                    Minimum="1"
                    Value="{Binding CellWidth}" />

                <!--  Game of Life Configuration GroupBox Row 9  -->
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Cell height [px]:" />
                <xctk:IntegerUpDown
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding CellHeight}"
                    DisplayDefaultValueOnEmptyText="True"
                    Maximum="100"
                    Minimum="1"
                    Value="{Binding CellHeight}" />

                <!--  Game of Life Configuration GroupBox Row 10  -->
                <TextBlock
                    Grid.Row="10"
                    Grid.Column="0"
                    Margin="3"
                    VerticalAlignment="Center"
                    Text="Line width [px]:" />
                <xctk:IntegerUpDown
                    Grid.Row="10"
                    Grid.Column="1"
                    Margin="3"
                    VerticalAlignment="Center"
                    DefaultValue="{Binding LineWidth}"
                    DisplayDefaultValueOnEmptyText="True"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding LineWidth}" />

                <!--  Game of Life Configuration GroupBox Row 11  -->
                <StackPanel
                    Grid.Row="11"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="StartStop"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="{Binding StartStopContent}" />
                    <Button
                        x:Name="ContinuePause"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="{Binding ContinuePauseContent}" />
                    <Button
                        x:Name="ShowNextStep"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="Next" />
                </StackPanel>

                <!--  Game of Life Configuration GroupBox Row 12  -->
                <Separator
                    Grid.Row="12"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    VerticalAlignment="Center" />

                <!--  Game of Life Configuration GroupBox Row 13  -->
                <StackPanel
                    Grid.Row="13"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <Button
                        x:Name="ClearCellGridImage"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="Clear"
                        IsEnabled="{Binding IsStarted}" />
                    <Button
                        x:Name="PutBeehiveInTheMiddle"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="Beehive"
                        IsEnabled="{Binding IsStarted}" />
                    <Button
                        x:Name="PutGliderInTheMiddle"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="Glider"
                        IsEnabled="{Binding IsStarted}" />
                    <Button
                        x:Name="PutBlinkerInTheMiddle"
                        Width="60"
                        Margin="3"
                        VerticalAlignment="Center"
                        Content="Blinker"
                        IsEnabled="{Binding IsStarted}" />
                    <StackPanel Orientation="Horizontal">
                        <Button
                            x:Name="Randomize"
                            Width="60"
                            Margin="3"
                            VerticalAlignment="Center"
                            Content="Random"
                            IsEnabled="{Binding IsStarted}" />
                        <xctk:IntegerUpDown
                            Width="60"
                            Margin="3"
                            VerticalAlignment="Center"
                            DefaultValue="{Binding RandomCellsToSetAliveCount}"
                            DisplayDefaultValueOnEmptyText="True"
                            IsEnabled="{Binding IsStarted}"
                            Maximum="{Binding CellCount}"
                            Minimum="1"
                            Value="{Binding RandomCellsToSetAliveCount}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  Game of Life View GroupBox  -->
        <GroupBox
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Header="View">
            <ScrollViewer>
                <Image
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    cal:Message.Attach="[Event MouseLeftButtonDown] = [Action NegateCellState($source, $eventArgs)]"
                    Source="{Binding CellGridBitmapImage, Mode=OneWay}"
                    Stretch="None" />
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>